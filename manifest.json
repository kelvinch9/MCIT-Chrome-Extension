{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MCIT Portal",
  "version": "1.0",
  "description": "Student's portal to every MCIT content",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "logos/portal.png",
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html",
    "open_in_tab": false
  }
}
